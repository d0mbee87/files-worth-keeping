syntax enable

set nocompatible

set hidden
set showcmd
set laststatus=2
set confirm
set visualbell

set cmdheight=2

set clipboard=unnamedplus

set history=500

filetype indent on
filetype plugin on

set autoread

let mapleader = ","
let g:mapleader = ","

nmap <leader>w :w!<cr>

set so=7

let $LANG='en'
set langmenu=en
source $VIMRUNTIME/delmenu.vim
source $VIMRUNTIME/menu.vim

set wildmenu

set ruler

set hid

set backspace=eol,start,indent

set ignorecase
set smartcase
set incsearch

set magic

set showmatch
set mat=2

set foldcolumn=1

set number

set cursorline
set showmatch
let python_highlight_all = 1

set background=dark

set encoding=utf8

set ffs=unix,dos,mac

set expandtab
set smarttab
set shiftwidth=4
set tabstop=4

set lbr
set tw=500

set ai
